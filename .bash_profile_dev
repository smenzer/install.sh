##
# set prompt
GREEN="\[\033[0;32m\]"
TEAL="\[\033[00;36m\]"
WHITE="\[\033[00m\]"
RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
export PS1="$WHITE[$GREEN\H$WHITE] $TEAL\w$WHITE\$ "

##
# include .bash_common 
if [ -f ~/.bash_common ]; then
  source ~/.bash_common
fi

##
# include eric's API wrapper
if [ -f ~/.api_wrapper ]; then
	AUTHDIR="/home/smenzer/api_auth/"
	source ~/.api_wrapper
fi

##
# add git dir to path
export PATH=$PATH:/usr/libexec/git-core
