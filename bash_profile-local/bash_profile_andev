##
# Set git autocompletion and PS1 integration
if [ -f /usr/local/git/contrib/completion/git-completion.bash ]; then
	. /usr/local/git/contrib/completion/git-completion.bash
fi
GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWSTASHSTATE=true
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_SHOWUPSTREAM="auto"

if [ -f /opt/local/etc/bash_completion ]; then
	. /opt/local/etc/bash_completion
fi

##
# Source global definitions
#if [ -f /etc/bashrc ]; then
#    . /etc/bashrc
#fi

##
# include .bash_common 
if [ -f ~/.bash_common ]; then
  source ~/.bash_common
fi

##
# include eric's API wrapper
if [ -f ~/.api_wrapper ]; then
	AUTHDIR="/home/smenzer/api_auth/"
	source ~/.api_wrapper
fi

##
# alias ack-grep to just ack
if [ -f "/usr/bin/ack-grep" ]; then
  alias ack="/usr/bin/ack-grep"
fi

##
# add git dir to path
export PATH=$PATH:/usr/libexec/git-core:$HOME/bin:$HOME/src/github.com/smenzer/terminal/git/git-utils

##
# iterm2 shell integration
test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"
