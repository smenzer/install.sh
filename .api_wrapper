##
# eric's API wrapper
#----------
VERBOSE=1
API_SAND="api-sand"
DW_SAND="dw-sand"
API_PROD="api-prod"
DW_PROD="dw-prod"
API_TEST="api-test"
DW_TEST="dw-test"
API="api"
DW="dw"
SAND="sand"
PROD="prod"
TEST="test"
API_SAND_COOKIE="${AUTHDIR}apisandcookie"
API_PROD_COOKIE="${AUTHDIR}apiprodcookie"
API_TEST_COOKIE="${AUTHDIR}apitestcookie"
DW_SAND_COOKIE="${AUTHDIR}ancsandcookie"
DW_PROD_COOKIE="${AUTHDIR}ancprodcookie"
DW_TEST_COOKIE="${AUTHDIR}anctestcookie"
CURR_COOKIE=""
CURR_URL=""
CURR_CONN=""
API_SAND_URL="http://api.sand-08.adnxs.net/"
#DW_SAND_URL="http://sand.api.appnexus.com/"
DW_SAND_URL="http://hb.sand-08.adnxs.net/"
API_PROD_URL="http://api.adnxs.com/"
DW_PROD_URL="http://api.appnexus.com/"
API_TEST_URL="http://api-impbus.client-testing.adnxs.net/"
DW_TEST_URL="http://api-console.client-testing.adnxs.net/"
AUTH_ERROR="ERROR: You must authentic first with \"auth\". Please use chelp for more information"
JSON_PRINT=""

function chelp() {
    echo ""
    echo "The available commands are:"
    echo "    auth(service-type)"
    echo "    switchto(user)"
    echo "    curlget(target)"
    echo "    curlgetraw(target)"
    echo "    meta(service)"
    echo "    curlput(target, json)"
    echo "    curlputraw(target, json)"
    echo "    curlputfile(target, json filename)"
    echo "    curlpost(target, json)"
    echo "    curlpostfile(target, json filename)"
	echo "    curldelete(target)"
    echo ""
    echo "The service-types are:"
    echo "    api-prod"
    echo "    dw-prod"
    echo "    api-sand"
    echo "    dw-sand"    
    echo "    api-test"    
    echo "    dw-test"    
    echo ""
}
function auth() {
    if [ "$1" == "$API_SAND" ]; then
        curl -b $API_SAND_COOKIE -c $API_SAND_COOKIE -X POST --data-binary @${AUTHDIR}s_auth.json "${API_SAND_URL}auth"
        CURR_COOKIE=$API_SAND_COOKIE
        CURR_URL=$API_SAND_URL
        CURR_CONN="${API}-${SAND}"
    elif [ "$1" == "$DW_SAND" ]; then
        curl -b $DW_SAND_COOKIE -c $DW_SAND_COOKIE -X POST --data-binary @${AUTHDIR}s_auth.json "${DW_SAND_URL}auth"
        CURR_COOKIE=$DW_SAND_COOKIE
        CURR_URL=$DW_SAND_URL
        CURR_CONN="${DW}-${SAND}"
    elif [ "$1" ==  "$API_PROD" ]; then
        curl -b $API_PROD_COOKIE -c $API_PROD_COOKIE -X POST --data-binary @${AUTHDIR}p_auth.json "${API_PROD_URL}auth"
        CURR_COOKIE=$API_PROD_COOKIE
        CURR_URL=$API_PROD_URL
        CURR_CONN="${API}-${PROD}"
    elif [ "$1" == "$DW_PROD" ]; then
        curl -b $DW_PROD_COOKIE -c $DW_PROD_COOKIE -X POST --data-binary @${AUTHDIR}p_auth.json "${DW_PROD_URL}auth"
        CURR_COOKIE=$DW_PROD_COOKIE
        CURR_URL=$DW_PROD_URL
        CURR_CONN="${DW}-${PROD}"
    elif [ "$1" == "$DW_TEST" ]; then
        curl -b $DW_TEST_COOKIE -c $DW_TEST_COOKIE -X POST --data-binary @${AUTHDIR}t_auth.json "${DW_TEST_URL}auth"
        CURR_COOKIE=$DW_TEST_COOKIE
        CURR_URL=$DW_TEST_URL
        CURR_CONN="${DW}-${TEST}"
    elif [ "$1" ==  "$API_TEST" ]; then
        curl -b $API_TEST_COOKIE -c $API_TEST_COOKIE -X POST --data-binary @${AUTHDIR}t_auth.json "${API_TEST_URL}auth"
        CURR_COOKIE=$API_TEST_COOKIE
        CURR_URL=$API_TEST_URL
        CURR_CONN="${API}-${TEST}"
    else
        echo "The proper usage is auth [api-prod/dw-prod/api-sand/dw-sand/api-test/dw-test]"
    fi
    
    if which json_reformat >/dev/null; then
        JSON_PRINT=" | json_reformat"
    fi
}


function switchto() {
    SWVAL="'{\"auth\":{\"switch_to_user\":${1} }}'"
    if [ $VERBOSE -gt 0 ]; then  
        echo "using ${CURR_CONN} ${SWVAL}"
    fi
    eval "curl -b $CURR_COOKIE -c $CURR_COOKIE -X POST -d ${SWVAL} ${CURR_URL}auth $JSON_PRINT"
}

function curlget() {
    if [ -z $CURR_CONN ]; then
        echo $AUTH_ERROR
    else
        CMD="curl -b $CURR_COOKIE -c $CURR_COOKIE \"${CURR_URL}${1}\" $JSON_PRINT"
        if [ $VERBOSE -gt 0 ]; then
            echo "Using: ${CMD}"
        fi
        eval "${CMD}"
    fi
}

