# add file extension to common file types
--type-add=css=.sass,.less,.scss
--type-add=ruby=.rake,.rsel,.builder,.thor
--type-add=html=.haml,.html.erb,.html.haml
--type-add=js=.js.erb,.coffee

# files to ignore by default
--ignore-file=is:tags

# directories to ignore by default
--ignore-dir=vendor
--ignore-dir=log
--ignore-dir=tmp

# only search with case sensitivity if there is mixed case
--smart-case

# sort results
--sort-files

# always show color
--color

# follow symlinks
--follow

# group results
--group

# Use "less âˆ’r" as my pager
#--pager=less -r
