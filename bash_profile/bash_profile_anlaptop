##
# include .bash_common
if [ -f ~/.bash_common ]; then
  source ~/.bash_common
fi

# disable flow control, needed for Command-T
# https://github.com/wincent/command-t
stty -ixon

##
# include eric's API wrapper
if [ -f ~/src/github.com/smenzer/terminal/bash_profile/api_wrapper ]; then
	AUTHDIR="./auth/"
	source ~/src/github.com/smenzer/terminal/bash_profile/api_wrapper
fi

##
# start agent and add identity
#ssh-agent > /tmp/ssh && ssh-add

##
# aliases
##

#misc
alias ll='ls -laG'

# sublime
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"

# boris
alias boris="~/Library/Developer/boris/bin/boris"

##
# /aliases
##

##
# MACPORTS PATH stuff
export PATH=$HOME/bin:/opt/local/bin:/opt/local/sbin:$HOME/.rvm/bin:/usr/bin/mongodb/bin:/usr/bin/pear:~/.composer/vendor/bin/:$PATH
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

##
# use latest java
export JAVA_HOME="/Library/Internet Plug-Ins/JavaAppletPlugin.plugin/Contents/Home"
