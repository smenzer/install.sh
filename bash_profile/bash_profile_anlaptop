##
# include .bash_common 
if [ -f ~/.bash_common ]; then
  source ~/.bash_common
fi

##
# Set git autocompletion and PS1 integration
if [ -f /usr/local/git/contrib/completion/git-completion.bash ]; then
	. /usr/local/git/contrib/completion/git-completion.bash
fi
GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWSTASHSTATE=true
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_SHOWUPSTREAM="auto"

##
# set prompt
GREEN="\[\033[0;32m\]"
TEAL="\[\033[00;36m\]"
WHITE="\[\033[00m\]"
RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"

export PS1="$WHITE[$GREEN\h$WHITE] $TEAL\w$YELLOW\$(__git_ps1)$WHITE\$ "

##
# include eric's API wrapper
if [ -f ~/terminal/bash_profile/api_wrapper ]; then
	AUTHDIR="./auth/"
	source ~/terminal/bash_profile/api_wrapper
fi

##
# start agent and add identity
#ssh-agent > /tmp/ssh && ssh-add

##
# MACPORTS PATH stuff
export PATH=$HOME/bin:/opt/local/bin:/opt/local/sbin:$HOME/.rvm/bin:/usr/bin/mongodb/bin:/usr/bin/pear:~/.composer/vendor/bin/:$PATH
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

## 
# use latest java
export JAVA_HOME="/Library/Internet Plug-Ins/JavaAppletPlugin.plugin/Contents/Home"

