##
# set prompt
GREEN="\[\033[0;32m\]"
TEAL="\[\033[00;36m\]"
WHITE="\[\033[00m\]"
RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"

export PS1="$WHITE[$GREEN\h$WHITE] $TEAL\w$WHITE\$ "

##
# include .bash_common 
if [ -f ~/.bash_common ]; then
  source ~/.bash_common
fi

export PATH=$HOME/bin:/opt/local/bin:/opt/local/sbin:$HOME/.rvm/bin:/usr/bin/mongodb/bin:/usr/bin/pear:~/.composer/vendor/bin:/Applications/MAMP/bin/php/php5.6.10/bin:$PATH
